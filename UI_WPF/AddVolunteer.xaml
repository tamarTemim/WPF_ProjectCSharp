<Window x:Class="UI_WPF.AddVolunteer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        mc:Ignorable="d"
        Title="AddVolunteer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1"
                  Grid.Column="1"
                  VerticalScrollBarVisibility="Auto" >


            <StackPanel Grid.Row="1" Grid.Column="1">
                <Label Content="Full Name" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtFullName" HorizontalAlignment="Center" Margin="5" Width="146"/>

                <Label Content="TZ" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtTz" HorizontalAlignment="Center" Margin="5" Width="142"/>
                <Label Content="Email" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Margin="5" Width="150"/>
                <Label Content="Phone Number" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtPhoneNumber" HorizontalAlignment="Center" Margin="5" Width="142"/>
                <Label Content="Addres" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtAddres" HorizontalAlignment="Center" Margin="5" Width="148"/>
                <Label Content="Job" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtJob" HorizontalAlignment="Center" Margin="5" Width="150"/>
                <Label Content="MaxDistance" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtMaxDistance" HorizontalAlignment="Center" Margin="5"/>
                <Label Content="Distance Type" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtDT" HorizontalAlignment="Center" Margin="5"/>
                <Label Content="Password" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="5"/>
                
                <Button x:Name="btnSubmitVolunteer" Content="Add Volunteer" HorizontalAlignment="Center"
  Click="btnSubmitVolunteer_Click" Margin="10" Background="White"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>
