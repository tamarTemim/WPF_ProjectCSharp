<Window x:Class="UI_WPF.AddCall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        mc:Ignorable="d"
        Title="AddCall" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1"
                  Grid.Column="1"
                  VerticalScrollBarVisibility="Auto" >
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Label Content="Call Description" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtCallDescription" HorizontalAlignment="Center" Margin="5" Width="200" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>
                <Label Content="Address Call" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtCallAddress" HorizontalAlignment="Center" Margin="5" Width="200"/>
                <Label Content="DateNeed" HorizontalAlignment="Center"/>
                <DatePicker x:Name="datePickerNeeded"
                    Width="200"
                    Height="25"
                    Margin="10"/>
                <Label Content="Category" HorizontalAlignment="Center"/>
                <ComboBox x:Name="comboboxCat" Width="200" Height="25" Margin="10">
                </ComboBox>
                <Button x:Name="btnSubmitCall" Content="Add Call" HorizontalAlignment="Center"
                Click="btnSubmitCall_Click" Margin="10" Background="White"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
